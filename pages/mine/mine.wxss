/* pages/mine/mine.wxss */

.content {
  width: calc(100% - 24px);
  height: 100%;
  background: #f5f5f5;
  display: flex;
  padding: 8px 12px;
}

.content_box {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.content_box_card {
  display: flex;
  width: calc(100% - 24px);
  padding: 12px;
  flex-direction: row;
  margin-bottom: 8px;
  background: #fff;
}

.content_box_card_header {
  display: flex;
  width: 100%;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}

.content_box_card_header_text {
  font-size: 12px;
  color: black;
}

.content_box_card_center {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.content_box_card_center_text {
  font-size: 12px;
  color: black;
}

.content_box_card_footer {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.content_box_card_footer_text {
  font-size: 12px;
  color: black;
}
