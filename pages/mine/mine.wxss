/* pages/mine/mine.wxss */
@import "../../styles/common.wxss";
.content {
  width: calc(100% - 48rpx);
  height: 100%;
  background: #f5f5f5;
  display: flex;
  padding: 16rpx 24rpx;
}

.content_box {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.content_box_card {
  display: flex;
  width: calc(100% - 48rpx);
  padding: 24rpx;
  flex-direction: row;
  margin-bottom: 16rpx;
  background: #fff;
}

.content_box_card_header {
  display: flex;
  width: 100%;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}

.content_box_card_header_text {
  font-size: 24rpx;
  color: black;
}

.content_box_card_center {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.content_box_card_center_text {
  font-size: 24rpx;
  color: black;
}

.content_box_card_footer {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.content_box_card_footer_text {
  font-size: 24rpx;
  color: black;
}
